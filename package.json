{
  "name": "typescript-node",
  "version": "1.0.0",
  "description": "Template typescript for nodejs",
  "author": "Hungtrn75",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "dev": "nodemon --exec ts-node src/server.ts",
    "prod": "npm run build && npm run start",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "async": "^2.6.1",
    "bcrypt-nodejs": "^0.0.3",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.2",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "connect-mongo": "^2.0.1",
    "dotenv": "^6.1.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "lodash": "^4.17.11",
    "lusca": "^1.6.1",
    "mongoose": "^5.3.6",
    "nodemailer": "^4.6.8",
    "passport": "^0.4.0",
    "passport-github": "^1.1.0",
    "passport-local": "^1.0.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.50",
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.24",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "^0.0.36",
    "@types/connect-mongo": "^0.0.39",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/lodash": "^4.14.117",
    "@types/lusca": "^1.5.0",
    "@types/mongoose": "^5.2.20",
    "@types/nodemailer": "^4.6.5",
    "@types/passport": "^0.4.6",
    "@types/passport-github": "^1.1.3",
    "@types/passport-local": "^1.0.33",
    "@types/request": "^2.47.1",
    "@types/request-promise": "^4.1.42",
    "@types/shelljs": "^0.8.0",
    "@types/winston": "^2.4.4",
    "concurrently": "^4.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.5",
    "shelljs": "^0.8.2",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  }
}
